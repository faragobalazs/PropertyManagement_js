generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Building {
  id            Int @id @default(autoincrement())
  name          String @unique
  address       String
  architect     String
  owner         String
  year          Int
  levels        Int
  webpage       String
  email         String
  phone         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  tenants       Tenants[]
  electricity   Electricity[]
  heating       Heating[]
  water         Water[]
  parking       Parking[]
}

model Tenants {
  id            Int @id @default(autoincrement())
  name          String
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    Int
  level         Int
  number        Int
  sqm           Float
  el_meters     Electricity[]
  heat_meters   Heating[]
  water_meters  Water[]
  parkingSpots  Parking[]
}

model Electricity {
  id            Int @id @default(autoincrement())
  date          DateTime
  meter         Float @unique
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    Int
  tenant        Tenants? @relation(fields: [tenantId], references: [id])
  tenantId      Int?
}

model Heating {
  id            Int @id @default(autoincrement())
  date          DateTime
  meter         Float @unique
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    Int
  tenant        Tenants? @relation(fields: [tenantId], references: [id])
  tenantId      Int?
}

model Water {
  id            Int @id @default(autoincrement())
  date          DateTime
  meter         Float @unique
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    Int
  tenant        Tenants? @relation(fields: [tenantId], references: [id])
  tenantId      Int?
}

model Parking {
  id            Int @id @default(autoincrement())
  number        Int
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    Int
  tenant        Tenants? @relation(fields: [tenantId], references: [id])
  tenantId      Int?
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Building {
  id            Int @id @default(autoincrement())
  name          String
  address       String
  architect     String
  owner         String
  year          Int
  levels        Int
  webpage       String
  email         String
  phone         String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Tenants {
  id            Int @id @default(autoincrement)
  name          String
  building      String
  level         Int
  number        Int
  sqm           Float
}

model Electricity {
  name          String
  date          DateTime
  meter         Float
}

model Heating {
  name          String
  date          DateTime
  meter         Float
}

model Water {
  name          String
  date          DateTime
  meter         Float
}

model Parking {
  id            Int @id @default(autoincrement)
  building      String
  number        Int
  occupied      Boolean
  Tenants       String
}

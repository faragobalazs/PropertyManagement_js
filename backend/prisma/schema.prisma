generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Building {
  id          Int @id @default(autoincrement())
  name        String
  address     String
  architect   String
  owner       String
  year        Int
  floor       Float
  levels      Int
  webpage     String
  email       String
  phone       String

  tenants       Tenant[]
  waterReadings Water[]
  gasReadings   Gas[]
  elecReadings  Electricity[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tenant {
  id      Int   @id @default(autoincrement())
  name    String
  floor   Int
  flat    Int
  surface Float

  buildingId Int
  building  Building @relation(fields: [buildingId], references: [id])
}

model Water {
  id      Int   @id @default(autoincrement())
  date    DateTime
  meter   Float

  buildingId  Int
  building  Building @relation(fields: [buildingId], references: [id])
}

model Gas {
  id        Int      @id @default(autoincrement())
  date      DateTime
  meter     Float
  
  buildingId Int
  building   Building @relation(fields: [buildingId], references: [id])
}

model Electricity {
  id        Int      @id @default(autoincrement())
  date      DateTime
  meter     Float
  
  buildingId Int
  building   Building @relation(fields: [buildingId], references: [id])
}
